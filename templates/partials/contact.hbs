<div class="container-fluid mt-5 about-style" id="contactid">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <h1 class="text-center main-heading">Our Services</h1>
      <p class="text-center sub-heading">We will be happy to help you</p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-12 mx-auto">
    <form action="/contact" method="POST">
      <div class="form-group">
        <label for="">Name</label>
        <input
          type="text"
          class="form-control"
          placeholder="Enter your name"
          name="name"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          name="email"
          placeholder="Enter your Email"
        />
        <div id="emailHelp" class="form-text">We'll never share your email with
          anyone else.</div>
      </div>
      <div class="form-group">
        <label for="">Phone</label>
        <input
          type="number"
          class="form-control"
          placeholder="Enter your Phone Number"
          name="phone"
        />
      </div>
      <div class="form-group">
        <label for="">Message</label>
        <input
          type="text"
          class="form-control"
          placeholder="Enter your Message"
          name="message"
          style=""
        />
      </div>
      <button type="submit" class="btn-style btn-primary">Submit</button>
    </form>
  </div>
</div>